# Stage 1: Build
FROM node:18-alpine AS builder

WORKDIR /app
COPY package*.json ./
COPY tailwind.config.js postcss.config.mjs next.config.ts ./
RUN npm ci
COPY . .

RUN npm run build

# Stage 2: Serve
FROM nginx:alpine
COPY --from=builder /app /usr/share/nginx/html

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
